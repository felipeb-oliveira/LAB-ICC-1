#include <stdio.h>
#include <stdlib.h>
#include <conio.h>
#include <unistd.h>
char x;

int sensor(){
    if(kbhit()){
        x = getch();
        if(x == '1'){
            return 1;
        }
        else if(x == '2'){
            return 2;
        }
        else if(x == '3'){
            return 3;
        }
    }
    else{
        return 4;
    }
}



int ia(int s){

    if(s == 2){
        return 4;
    }
    else if(s == 1){
        return 1;
    }
    else if(s == 3){
        return 3;
    }
    else if(s == 4){
        return 2;
    }
}



void drivemotors(int m){

    if(m == 1){
        printf("\r1 -- 0");
    }
    else if(m == 4){
        printf("\r0 -- 0");
    }

    else if(m == 2){
        printf("\r1 -- 1");
    }
    else if(m == 3){
        printf("\r0 -- 1");
    }
}



int main(){
    while(1){
        drivemotors(ia(sensor()));
        sleep(1);
    }
    return 0;
}
