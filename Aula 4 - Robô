#include <stdio.h>
#include <stdlib.h>
#include <conio.h>
#include <unistd.h>
#include <time.h>
int tempo, x, y, t;

int sensor(){
    int s;
    srand(time(NULL) + rand());
    x = (rand()%2);
    y = (rand()%2);

    if(x == 0 && y == 0){
        return 1;
    }
    else if(x == 0 && y == 1){
        return 1;
    }
    else if(x == 1 && y == 0){
        return 2;
    }
    else if(x == 1 && y == 1){
        return 3;
    }


/*    typedef struct sensors{
        char sposition;
        int on;
    }SENSORS;

    struct sensors lsensor;
    struct sensors rsensor;

    lsensor.sposition = "l";
    lsensor.on = x;

    rsensor.sposition = "r";
    rsensor.on = y;


    usleep(tempo);

    return SENSORS;

*/
}


int ia(int s){

/*    struct motors{
        char mposition;
        int on;
    };
    struct motors lmotor = {"l", lsensor.on};
    struct motors rmotor = {"r", rsensor.on};

    return(struct motors);
*/

    return s;
}


void drivemotors(int m){

/*    printf("\r%d -- %d", lmotor.on, rmotor.on);
*/

    if(m == 1){
        printf("\r0 -- 1");
    }
    else if(m == 2){
        printf("\r1 -- 0");
    }
    else if(m == 3){
        printf("\r1 -- 1");
    }
}



int main(){
    while(1){
        drivemotors(ia(sensor()));
        srand(time(NULL));
        tempo = ((200*(rand()%3)) + 300)/1000;
        sleep(tempo);
    }
    return 0;
}
