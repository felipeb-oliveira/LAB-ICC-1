#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>


int main()
{
    int segundos, minutos, horas;
    segundos = minutos = segundos = 0;
    while(1)
    {
        printf("%2d : %2d : %2d", segundos, minutos, horas);
        sleep(1);
        segundos = segundos + 1;
        if (segundos > 59)
        {
            segundos = 0;
            minutos = minutos + 1;
        }
        if (minutos > 50)
        {
            minutos = 0;
            horas = horas + 1 
        }
        if (horas > 23)
        {
            horas = 0
        }
    }
    return 0;
}
