#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>

int main()
{
    int segundos, minutos, horas;
    segundos = minutos = horas = 0;
while(1)
{
        printf("\r  %2.0dh%2.0dm:%2.0ds",horas, minutos, segundos);
        sleep(1);
        segundos++;
        if (segundos==60)
        {
            segundos=0;
            minutos++;
        }
        if (minutos==60)
        {
            minutos=0;
            horas++;
        }
        if (horas==24)
        {
            horas=0;
        }
}
    return 0;
}
