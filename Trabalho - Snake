#include <stdio.h>
#include <stdlib.h>
#include <conio.h>
#include <time.h>

#define X_TAM 60
#define Y_TAM 30

typedef struct cobra{
    int x;
    int y;
    char direcao;
}snake;

typedef struct food{
    int x;
    int y;
}food;

char screen[100][100];
snake cobra[200], dobra[500];

int jogo = 0;
int k = 'd';

void inicializa(){
        int i, j;
        for(i = 0; i < Y_TAM; i++){
            for(j = 0; j < X_TAM; j++){
                if(i == 0 || i == Y_TAM-1){
                    screen[i][j] = '_';
                }
                else if(j == 0 || j == X_TAM-1){
                    screen[i][j] = '|';
                }
                else{
                    screen[i][j] = ' ';
                }

            }
        }
        cobra[0].x = X_TAM/2;
        cobra[0].y = Y_TAM/2;
        cobra[0].direcao = 'd';
        screen[cobra[0].y][cobra[0].x] = 'O';
}

void tela(int t){
    int i, j;

    for(i = 0; i < Y_TAM; i++){
        printf("\n");
        for(j = 0; j < X_TAM; j++){
            printf("%c", screen[i][j]);
        }
    }

    printf("\n");
    printf("Pontos: %d", t);
}

void movimento(void){
    int i, tempx, tempy, tempd;

    if(kbhit())
        k = kbhit();

    if(k == 'w'){
        if(cobra[0].direcao == 'a' || cobra[0].direcao == 'd'){
            tempx = cobra[0].x;
            tempy = cobra[0].y;
            tempd = cobra[0].direcao;

            cobra[0].y = cobra[0].y-1;

            for(i = 0; i < 199; i++){
                cobra[i+1].y = tempy;
                cobra[i+1].x = tempx;
                cobra[i+1].direcao = tempd;

                tempx = cobra[i+1].x;
                tempy = cobra[i+1].y;
                tempd = cobra[i+1].direcao;
            }
        }
    }
    else if(k == 'a'){
        if(cobra[0].direcao == 'w' || cobra[0].direcao == 's'){
            tempx = cobra[0].x;
            tempy = cobra[0].y;
            tempd = cobra[0].direcao;

            cobra[0].x = (cobra[0].x)-1;

            for(i = 0; i < 199; i++){
                cobra[i+1].y = tempy;
                cobra[i+1].x = tempx;
                cobra[i+1].direcao = tempd;

                tempx = cobra[i+1].x;
                tempy = cobra[i+1].y;
                tempd = cobra[i+1].direcao;
            }
        }

    }
    else if(k == 's'){
        if(cobra[0].direcao == 'a' || cobra[0].direcao == 'd'){
            tempx = cobra[0].x;
            tempy = cobra[0].y;
            tempd = cobra[0].direcao;

            cobra[0].y = (cobra[0].y)+1;

            for(i = 0; i < 199; i++){
                cobra[i+1].y = tempy;
                cobra[i+1].x = tempx;
                cobra[i+1].direcao = tempd;

                tempx = cobra[i+1].x;
                tempy = cobra[i+1].y;
                tempd = cobra[i+1].direcao;
            }
        }

    }
    else if(k == 'd'){
        if(cobra[0].direcao == 'w' || cobra[0].direcao == 's'){
            tempx = cobra[0].x;
            tempy = cobra[0].y;
            tempd = cobra[0].direcao;

            cobra[0].x = (cobra[0].x)+1;

            for(i = 0; i < 199; i++){
                cobra[i+1].y = tempy;
                cobra[i+1].x = tempx;
                cobra[i+1].direcao = tempd;

                tempx = cobra[i+1].x;
                tempy = cobra[i+1].y;
                tempd = cobra[i+1].direcao;
            }
        }
    }
}

void comida(void){
    srand(time(NULL));
    food.x = rand()%((X_TAM)-2);
    food.y = rand()%((Y_TAM)-2);
    
    screen[food.y][food.x] = 'F';
}

int crescer(int* t){
    
    
}



int main(){
    int* tam = 0, temp;
    inicializa();

    while(jogo == 0){
        movimento();
        temp = crescer(tam);
        
        if(temp == 1){
            comida();          
        }
        
        tela(*tam);
    }

    return 0;
}
